@model MeetingTracker.Models.Meeting

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>




<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">

<script src="http://code.jquery.com/jquery-1.10.2.js"></script>

<script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>

<script>

    $(function () {

        $("#txtdatepicker").datepicker();

    });

</script>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Meeting</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MeetingId)

        <div class="form-group">
            @Html.LabelFor(model => model.MeetingDescription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MeetingDescription, new{@lcass="form-control"})
                @Html.ValidationMessageFor(model => model.MeetingDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MeetingDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("MeetingDate", string.Empty, new { @id = "txtdatepicker", @style = "width:150px;" })
                @Html.ValidationMessageFor(model => model.MeetingDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.DropDownList("StartTime", new List<SelectListItem>
                {
                    new SelectListItem{Text = "Please Select Start Time", Value="Select", Selected = true},
              new SelectListItem { Text = "09:00 AM", Value = "09:00 AM" },
                    new SelectListItem { Text = "10:00 AM", Value = "10:00 AM" },
                    new SelectListItem { Text = "11:00 AM", Value = "11:00 AM" },
                    new SelectListItem { Text = "12:00 PM", Value = "12:00 PM" },
                    new SelectListItem { Text = "13:00 PM", Value = "13:00 PM" },
                    new SelectListItem { Text = "14:00 PM", Value = "14:00 PM" },
                    new SelectListItem { Text = "15:00 PM", Value = "15:00 PM" },
                    new SelectListItem { Text = "16:00 PM", Value = "16:00 PM" }

                })
                @Html.ValidationMessageFor(model => model.StartTime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EndTime", new List<SelectListItem>
                {
                     new SelectListItem{Text = "Please Select End Time", Value="Select", Selected = true},
                    new SelectListItem { Text = "10:00 AM", Value = "10:00 AM" },
                    new SelectListItem { Text = "11:00 AM", Value = "11:00 AM" },
                    new SelectListItem { Text = "12:00 PM", Value = "12:00 PM" },
                    new SelectListItem { Text = "13:00 PM", Value = "13:00 PM" },
                    new SelectListItem { Text = "14:00 PM", Value = "14:00 PM" },
                    new SelectListItem { Text = "15:00 PM", Value = "15:00 PM" },
                    new SelectListItem { Text = "16:00 PM", Value = "16:00 PM" },
                    new SelectListItem{Text = "17:00 PM", Value = "5pm"}
                })
                @Html.ValidationMessageFor(model => model.EndTime)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Location, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Location)
                @Html.ValidationMessageFor(model => model.Location)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MeetingTypeId, "MeetingTypeId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MeetingTypeId", String.Empty)
                @Html.ValidationMessageFor(model => model.MeetingTypeId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

